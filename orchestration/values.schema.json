{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "gcs": {
      "type": "object",
      "properties": {
        "sourceBucketName": { "type": "string" },
        "stagingBucketName": {"type":  "string"}
      },
      "required": ["bucketName", "resultBucketName"]
    },
    "serviceAccount": {
      "type": "object",
      "properties": {
        "k8sName": { "type": "string" },
        "googleName": { "type": "string" }
      },
      "required": ["k8sName", "googleName"]
    },
    "cron": {
      "type": "object",
      "properties": {
        "enable": { "type": "boolean" },
        "schedule": { "type": "string" },
        "timezone": { "type": "string" }
      },
      "required": ["enable", "schedule"]
    },
    "dataflow": {
      "type": "object",
      "properties": {
        "project": { "type": "string" },
        "region": { "type": "string" },
        "tmpBucketName": { "type": "string" },
        "subnetName": { "type": "string" },
        "workerAccount": { "type": "string" },
        "workerMachineType": { "type": "string" },
        "autoscaling": {
          "type": "object",
          "properties": {
            "minWorkers": {
              "type": "integer",
              "minimum": 1
            },
            "maxWorkers": {
              "type": "integer",
              "minimum": 1
            }
          },
          "required": ["minWorkers", "maxWorkers"]
        },
        "useFlexRS": { "type": "boolean" }
      },
      "required": ["project", "region", "tmpBucketName",  "subnetName", "workerAccount",
        "workerMachineType", "autoscaling", "useFlexRS"]
    }
  },
  "required": ["gcs", "serviceAccount", "cron", "dataflow"]
}
